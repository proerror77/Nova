# Ranking Service Configuration

# Service ports
HTTP_PORT=8011
GRPC_PORT=9011
SERVICE_NAME=ranking-service

# Redis
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# gRPC Clients
GRAPH_SERVICE_URL=http://localhost:9008
CONTENT_SERVICE_URL=http://localhost:9002

# Recall Configuration
GRAPH_RECALL_LIMIT=200
TRENDING_RECALL_LIMIT=100
PERSONALIZED_RECALL_LIMIT=100

# Recall Weights (must sum to ~1.0)
GRAPH_RECALL_WEIGHT=0.6
TRENDING_RECALL_WEIGHT=0.3
PERSONALIZED_RECALL_WEIGHT=0.1

# Logging
RUST_LOG=info,ranking_service=debug
