{
  "name": "nova-postgres-cdc",
  "config": {
    "connector.class": "io.debezium.connector.postgresql.PostgresConnector",
    "database.hostname": "${DATABASE_HOST:postgres}",
    "database.port": "${DATABASE_PORT:5432}",
    "database.user": "${DATABASE_USER:postgres}",
    "database.password": "${DATABASE_PASSWORD:postgres}",
    "database.dbname": "${DATABASE_NAME:nova}",
    "database.server.name": "nova-postgres",
    "plugin.name": "pgoutput",
    "publication.name": "nova_cdc",
    "slot.name": "nova_cdc_slot",
    "table.include.list": "public.posts,public.follows,public.comments,public.likes",
    "column.include.list": "public.posts.id,public.posts.user_id,public.posts.content,public.posts.image_urls,public.posts.created_at,public.posts.updated_at,public.follows.id,public.follows.follower_id,public.follows.following_id,public.follows.created_at,public.comments.id,public.comments.post_id,public.comments.user_id,public.comments.content,public.comments.parent_comment_id,public.comments.created_at,public.comments.updated_at,public.comments.soft_delete,public.likes.id,public.likes.user_id,public.likes.post_id,public.likes.created_at",
    "snapshot.mode": "always",
    "snapshot.delay.ms": "5000",
    "snapshot.fetch.size": "2048",
    "max.batch.size": "2048",
    "max.queue.size": "8192",
    "poll.interval.ms": "1000",
    "transforms": "route,unwrap",
    "transforms.route.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.route.regex": "([^.]+)\\.([^.]+)\\.([^.]+)",
    "transforms.route.replacement": "cdc.$3",
    "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
    "transforms.unwrap.drop.tombstones": "true",
    "transforms.unwrap.delete.handling.mode": "rewrite",
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "false",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true",
    "errors.deadletterqueue.context.headers.enable": "true"
  }
}
