# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/nova_chat

# Redis
REDIS_URL=redis://127.0.0.1:6379

# Server ports
PORT=3000
GRPC_PORT=50051

# E2EE Encryption Master Key (base64 encoded 32 bytes)
# Generate with: openssl rand -base64 32
ENCRYPTION_MASTER_KEY=

# E2EE Olm Account Key (hex encoded 32 bytes)
# Generate with: openssl rand -hex 32
# Optional: if not set, E2EE endpoints return 503
OLM_ACCOUNT_KEY=

# JWT Public Key (for token validation)
JWT_PUBLIC_KEY_PATH=/path/to/jwt_public.pem

# gRPC mTLS certificates
GRPC_SERVER_CERT_PATH=
GRPC_SERVER_KEY_PATH=
GRPC_CA_CERT_PATH=

# gRPC Identity Service URL
GRPC_IDENTITY_SERVICE_URL=http://localhost:50052

# S3 (optional, for media)
S3_BUCKET=nova-media
S3_REGION=us-east-1
# S3_ENDPOINT=http://localhost:9000  # For MinIO
