{
  "dashboard": {
    "title": "Database Connection Pool Metrics",
    "tags": ["database", "performance", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Connection Pool Utilization by Service",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "(db_pool_connections{state=\"active\"} / db_pool_connections{state=\"max\"}) * 100",
            "legendFormat": "{{service}} - Utilization %"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 100, "min": 0}
        ],
        "alert": {
          "conditions": [
            {
              "type": "query",
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"type": "avg"},
              "evaluator": {"type": "gt", "params": [90]}
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "1m",
          "name": "Pool Exhaustion Alert"
        }
      },
      {
        "id": 2,
        "title": "Active vs Idle Connections",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "db_pool_connections{state=\"active\"}",
            "legendFormat": "{{service}} - Active"
          },
          {
            "expr": "db_pool_connections{state=\"idle\"}",
            "legendFormat": "{{service}} - Idle"
          },
          {
            "expr": "db_pool_connections{state=\"max\"}",
            "legendFormat": "{{service}} - Max"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"}
        ]
      },
      {
        "id": 3,
        "title": "Connection Acquisition Latency (P95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_pool_acquire_duration_seconds_bucket[5m]))",
            "legendFormat": "{{service}} - P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(db_pool_acquire_duration_seconds_bucket[5m]))",
            "legendFormat": "{{service}} - P99"
          }
        ],
        "yaxes": [
          {"format": "s", "logBase": 1, "label": "Latency"}
        ],
        "thresholds": [
          {"value": 1, "colorMode": "critical", "op": "gt", "fill": true, "line": true}
        ]
      },
      {
        "id": 4,
        "title": "Connection Errors Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(db_pool_connection_errors_total{error_type=\"timeout\"}[5m])",
            "legendFormat": "{{service}} - Timeouts"
          },
          {
            "expr": "rate(db_pool_connection_errors_total{error_type=\"closed\"}[5m])",
            "legendFormat": "{{service}} - Pool Closed"
          },
          {
            "expr": "rate(db_pool_connection_errors_total{error_type=\"other\"}[5m])",
            "legendFormat": "{{service}} - Other Errors"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Errors/sec"}
        ]
      },
      {
        "id": 5,
        "title": "Top 5 Services by Connection Usage",
        "type": "table",
        "gridPos": {"x": 0, "y": 16, "w": 24, "h": 6},
        "targets": [
          {
            "expr": "topk(5, db_pool_connections{state=\"active\"})",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {"service": 0, "Value": 1},
              "renameByName": {"service": "Service", "Value": "Active Connections"}
            }
          }
        ]
      },
      {
        "id": 6,
        "title": "Connection Acquisition Heatmap",
        "type": "heatmap",
        "gridPos": {"x": 0, "y": 22, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(db_pool_acquire_duration_seconds_bucket[5m])) by (le)",
            "format": "heatmap",
            "legendFormat": "{{le}}"
          }
        ],
        "yAxis": {"format": "s", "logBase": 2},
        "dataFormat": "tsbuckets"
      }
    ],
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}
