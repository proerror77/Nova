#!/bin/bash
#
# upload - Quick git sync command
# Usage: upload [commit message]
#
# One command to: stage → commit → push → create PR
#

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

MESSAGE="${1:-feat: add git-sync workflow automation script}"

exec "$SCRIPT_DIR/git-sync.sh" \
    --all \
    --message "$MESSAGE" \
    --pr
